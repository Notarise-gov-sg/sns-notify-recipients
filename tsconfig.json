{
    "compilerOptions": {
      "resolveJsonModule": true,
      "outDir": "./dist",
      "rootDirs": ["./", "./src"],
      "typeRoots": ["./src/types.ts", "./@types", "node_modules/@types"],
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react",
      "strict": true,
      "declaration": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "stripInternal": true,
      "allowSyntheticDefaultImports": true
    }
  }